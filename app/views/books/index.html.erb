<div class="field">
  <h1>Books</h1>
</div>
<div class="field">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'show', book_path(id: book.id) %></td>
          <td><%= link_to 'edit', edit_book_path(book) %></td>
          <td><%= link_to 'destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="field">
<h2>New Book</h2>
</div>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <h4>Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <h4>Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>